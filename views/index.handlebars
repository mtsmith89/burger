<div class="row">
    <div class="col s12">
        <div class="col s6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Burgers To Devour!</span>
                    <hr>
                    <ol>
                        {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
                    </ol>
                </div>
            </div>
        </div>
        <div class="col s6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Burgers Already Devoured!</span>
                    <hr>
                    <ol>
                        {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s3">
    <img class="materialboxed center" width="250" src="assets/img/burger.gif">
    </div>  
    <form class="card create-form col s6">
        <div class="card-content">
            <span class="card-title">Add A New Burger!</span>
            <hr>
            <div class="input-field col s6 offset-3">
                <input id="bg" type="text" class="validate">
                <label for="bg">Add your own Burger to devour here</label>
                <button class="btn waves-effect waves-light" type="submit" name="action">ADD BURGER!
                    <i class="material-icons right">add_circle</i>
                </button>
            </div>
        </div>
    </form>
</div>